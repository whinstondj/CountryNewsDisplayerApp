<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:minHeight="88dp">

    <ImageView
        android:id="@+id/news_image_preview"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:padding="16dp"
        tools:ignore="ContentDescription"
        tools:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/news_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_toEndOf="@id/news_image_preview"
        android:fontFamily="@font/almendra_sc"
        android:maxLines="2"
        android:ellipsize="end"
        android:paddingTop="16dp"
        android:paddingEnd="16dp"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:textColor="@color/black"
        tools:text="News Title" />

    <TextView
        android:id="@+id/news_author_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/news_title_text"
        android:layout_gravity="center_vertical"
        android:layout_toEndOf="@id/news_image_preview"
        android:fontFamily="@font/advent_pro"
        android:maxLines="1"
        android:paddingEnd="16dp"
        android:textAppearance="?attr/textAppearanceBody2"
        android:textColor="@color/gray_800"
        tools:text="Author"/>

    <TextView
        android:id="@+id/news_description_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/news_author_text"
        android:layout_gravity="center_vertical"
        android:layout_toEndOf="@id/news_image_preview"
        android:ellipsize="end"
        android:fontFamily="@font/advent_pro"
        android:maxLines="2"
        android:textColor="@color/black"
        android:paddingEnd="16dp"
        android:textAppearance="?attr/textAppearanceBody2"
        tools:text="Description" />

</RelativeLayout>
</layout>